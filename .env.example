# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Supabase (Database)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Vapi (Voice AI Provider) - Get from https://dashboard.vapi.ai
VAPI_PRIVATE_KEY=your-vapi-private-key
VAPI_PUBLIC_KEY=your-vapi-public-key
VAPI_PHONE_NUMBER=+1234567890
VAPI_PHONE_ID=your-vapi-phone-id
VAPI_ASSISTANT_ID=your-vapi-assistant-id
VAPI_WEBHOOK_SECRET=your-webhook-secret-from-vapi-dashboard

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Flutterwave Payments (Optional)
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key-here
FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key-here
FLUTTERWAVE_ENCRYPTION_KEY=your-flutterwave-encryption-key

# AI Provider Configuration
AI_PROVIDER=groq
# OpenAI Integration (Legacy)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
# Groq Integration (Fast & Reliable - Recommended)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile

# Future: ODIADEV Voice Provider
VOICE_PROVIDER=vapi
ODIADEV_API_KEY=your-odiadev-api-key-when-ready
ODIADEV_BASE_URL=https://api.odiadev.ai/v1
